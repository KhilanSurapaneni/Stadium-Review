<% layout("layouts/boilerplate") %>
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Campground</h1>
    <form action="/pitches/<%= pitch._id %>?_method=PATCH" method="post" class="mx-auto" style="max-width: 600px;">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input type="text" name="pitch[title]" id="title" value="<%= pitch.title %>" class="form-control">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Enter Location</label>
            <input type="text" name="pitch[location]" id="location" value="<%= pitch.location %>" class="form-control">
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Enter Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" name="pitch[price]" id="price" value="<%= pitch.price %>" class="form-control" placeholder="0.00">
            </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter Image URL</label>
            <input type="text" name="pitch[image]" id="image" value="<%= pitch.image %>" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Enter Description</label>
            <input type="text" name="pitch[description]" id="description" value="<%= pitch.description %>" class="form-control">
        </div>

        <button type="submit" class="btn btn-success w-100">Update Pitch</button>
    </form>
    <div class="mt-3 text-center">
        <a href="http://localhost:3000/pitches" class="btn btn-link">All Pitches</a>
    </div>
</div>
