<% layout("layouts/boilerplate") %>
<div class="container mt-5">
    <div class="row">
        <!-- Pitch Card on the Left -->
        <div class="col-md-6">
            <div class="card mb-3">
                <img src="<%= pitch.image %>" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <%= pitch.title %>
                    </h5>
                    <p class="card-text">
                        <%= pitch.description %>
                    </p>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= pitch.location %>
                    </h6>
                    <p class="card-text">
                        <small class="text-muted">$<%= pitch.price %>/night</small>
                    </p>
                    <a href="/pitches/edit/<%= pitch._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/pitches/<%= pitch._id %>?_method=DELETE" method="post" class="d-inline">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <p class="card-text mt-2">
                        <small class="text-muted">2 days ago</small>
                    </p>
                </div>
            </div>
        </div>
        <!-- Review Section on the Right -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h2>Leave a Review</h2>
                    <form action="/pitches/<%= pitch._id %>/reviews" method="post" class="p-3 border rounded validated-form" novalidate>
                        <div class="form-group">
                            <label for="rating">Rating</label>
                            <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating" value="3" required>
                            <div class="invalid-feedback">
                                Please select a rating.
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label for="body">Review</label>
                            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                            <div class="invalid-feedback">
                                Please provide a review.
                            </div>
                        </div>  
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-5">
                <h3>Reviews</h3>
                <% for (let review of pitch.reviews) { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Rating: <%= review.rating %>/5</h5>
                            <p class="card-text"><%= review.body %></p>
                            <form action="/pitches/<%=pitch._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
